<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"

       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean id="dataSource"
          class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <!--destroy-method="close">-->
        <property name="driverClassName" value="org.springframework.jdbc.datasource.SimpleDriverDataSource"/>
        <property name="url" value="jdbc:postgresql://localhost/zooshop"/>
        <property name="username" value="postgres"/>
        <property name="password" value="5991"/>
    </bean>

    <bean id="animalDao" class="AnimalDao">
        <property name="dataSource" ref="dataSource" />
    </bean>

</beans>